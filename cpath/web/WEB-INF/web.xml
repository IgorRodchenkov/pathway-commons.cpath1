<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<display-name>CBio Data Services Application</display-name>
    
    <filter>
        <filter-name>Cache</filter-name>
        <filter-class>org.mskcc.pathdb.servlet.CacheFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>Cache</filter-name>
        <servlet-name>DataServiceServlet</servlet-name>
    </filter-mapping>
    
    <servlet>
        <servlet-name>DataServiceServlet</servlet-name>
        <servlet-class>org.mskcc.pathdb.servlet.DataService</servlet-class>
	<init-param>
		<param-name>db_host</param-name>
		<param-value>localhost</param-value>
	</init-param>
	<init-param>
		<param-name>db_user</param-name>
		<param-value>user</param-value>
	</init-param>
	<init-param>
		<param-name>db_password</param-name>
		<param-value>cbio1</param-value>
	</init-param>
	<init-param>
		<param-name>log_config_file</param-name>
		<param-value>/WEB-INF/config/config-JDBC.properties</param-value>
	</init-param>
	<load-on-startup />
    </servlet>

    <servlet-mapping>
        <servlet-name>DataServiceServlet</servlet-name>
        <url-pattern>/dataservice</url-pattern>
    </servlet-mapping>

</web-app>
