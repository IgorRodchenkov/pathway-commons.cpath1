<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>CBio Data Services Application</display-name>
    <!--
    <filter>
        <filter-name>Cache</filter-name>
        <filter-class>org.mskcc.pathdb.servlet.CacheFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>Cache</filter-name>
        <servlet-name>DataServiceServlet</servlet-name>
    </filter-mapping>
    -->
    <!--  Data Services Servlet -->
    <servlet>
        <servlet-name>DataServiceServlet</servlet-name>
        <servlet-class>org.mskcc.pathdb.servlet.DataService</servlet-class>
        <init-param>
            <param-name>db_host</param-name>
            <param-value>localhost</param-value>
        </init-param>
        <init-param>
            <param-name>db_user</param-name>
            <param-value>tomcat</param-value>
        </init-param>
        <init-param>
            <param-name>db_password</param-name>
            <param-value>kitty</param-value>
        </init-param>
        <init-param>
            <param-name>log_config_file</param-name>
            <param-value>/WEB-INF/config/config-JDBC.properties</param-value>
        </init-param>
        <load-on-startup/>
    </servlet>
    <!-- XML-RPC Servelt -->
    <servlet>
        <servlet-name>XmlRpcServlet</servlet-name>
        <servlet-class>org.mskcc.pathdb.servlet.XmlRpcServlet</servlet-class>
        <load-on-startup/>
    </servlet>
    <!-- Struts Action Servlet Configuration -->
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <init-param>
            <param-name>debug</param-name>
            <param-value>2</param-value>
        </init-param>
        <init-param>
            <param-name>detail</param-name>
            <param-value>2</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <!-- Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>DataServiceServlet</servlet-name>
        <url-pattern>/dataservice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>XmlRpcServlet</servlet-name>
        <url-pattern>/xmlrpc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>

    <!-- Tag Libraries -->
    <taglib>
        <taglib-uri>/WEB-INF/taglib/struts-html.tld</taglib-uri>
        <taglib-location>/WEB-INF/taglib/struts-html.tld</taglib-location>
    </taglib>

</web-app>
